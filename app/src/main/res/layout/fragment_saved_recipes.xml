<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout_saved_recipes"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/black"
	tools:context=".SavedRecipesFragment">

	<Button
		android:id="@+id/btn_add_recipe"
		style="@style/ButtonSR"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/str_add_recipe"
		app:elevation="2dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:id="@+id/scrollview"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btn_add_recipe">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recycler_SR"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/btn_add_recipe">

		</androidx.recyclerview.widget.RecyclerView>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
