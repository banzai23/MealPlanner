<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.mealplanner.MainActivity"
        android:label="content_main"
        tools:layout="@layout/content_main" />
    <fragment
        android:id="@+id/editRecipeFragment"
        android:name="com.example.mealplanner.EditRecipeFragment"
        android:label="fragment_edit_recipes"
        tools:layout="@layout/fragment_edit_recipes" >
        <action
            android:id="@+id/action_editRecipeFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.mealplanner.CalendarFragment"
        android:label="CalendarFragment" >
        <action
            android:id="@+id/action_calendarFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/viewMPRecipeFragment"
        android:name="com.example.mealplanner.ViewMPRecipeFragment"
        android:label="fragment_blank_view"
        tools:layout="@layout/fragment_blank_view" >
        <action
            android:id="@+id/action_viewMPRecipeFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/shoppingListFragment"
        android:name="com.example.mealplanner.ShoppingListFragment"
        android:label="fragment_shopping_list"
        tools:layout="@layout/fragment_shopping_list" >
        <action
            android:id="@+id/action_shoppingListFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
</navigation>