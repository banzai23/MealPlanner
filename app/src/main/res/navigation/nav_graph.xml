<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.mealplanner.MainActivity"
        android:label="content_main"
        tools:layout="@layout/content_main" />
    <fragment
        android:id="@+id/loadPlanFragment"
        android:name="com.example.mealplanner.LoadPlanFragment"
        android:label="fragment_load_plan"
        tools:layout="@layout/fragment_load_plan" >
        <action
            android:id="@+id/action_loadPlanFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/savePlanFragment"
        android:name="com.example.mealplanner.SavePlanFragment"
        android:label="fragment_save_plan"
        tools:layout="@layout/fragment_save_plan" >
        <action
            android:id="@+id/action_savePlanFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/savedRecipesFragment"
        android:name="com.example.mealplanner.SavedRecipesFragment"
        android:label="fragment_saved_recipes"
        tools:layout="@layout/fragment_saved_recipes" >
        <action
            android:id="@+id/action_savedRecipesFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/savedRecipesEditFragment"
        android:name="com.example.mealplanner.SavedRecipesEditFragment"
        android:label="fragment_saved_recipes_edit"
        tools:layout="@layout/fragment_saved_recipes_edit" >
        <action
            android:id="@+id/action_savedRecipesEditFragment_to_savedRecipesFragment"
            app:destination="@id/savedRecipesFragment" />
    </fragment>
</navigation>